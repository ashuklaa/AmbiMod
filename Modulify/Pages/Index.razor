    private List<string> packetSplit(string fullMsg, int packetSize)
    {
        List<string> packets = new List<string>();

        for (int i = 0; i < fullMsg.Length; i += packetSize)
        {
            if (i + packetSize > fullMsg.Length) packetSize = fullMsg.Length - i;
            packets.Add(fullMsg.Substring(i, packetSize));
        }
        return packets;
    }
    private async void UpdateProfile()
    {
        await InvokeAsync(StateHasChanged);
    }

